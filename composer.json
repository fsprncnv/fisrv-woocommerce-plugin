{
  "name": "extension/fisrv-woocommerce-plugin",
  "description": "WooCommerce plugin integration with Fisrv",
  "version": "0.0.2",
  "minimum-stability": "stable",
  "license": "GNU General Public License v3.0",
  "autoload": {
    "classmap": [
      "includes/"
    ]
  },
  "require": {
    "fisrv/php-client": "@stable"
  },
  "require-dev": {
    "phpunit/phpunit": "*",
    "automattic/jetpack-autoloader": "^2",
    "php-stubs/wordpress-stubs": "^6.5",
    "phpstan/phpstan": "*",
    "php-stubs/woocommerce-stubs": "*",
    "friendsofphp/php-cs-fixer": "*"
  },
  "config": {
    "allow-plugins": {
      "automattic/jetpack-autoloader": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "repositories": {
    "80": {
      "type": "composer",
      "url": "https://gitlab.mherrm.de/api/v4/group/80/-/packages/composer/packages.json"
    }
  },
  "archive": {
    "name": "fisrv-checkout-for-woocommerce",
    "exclude": [
      ".gitlab-ci.yml",
      ".gitignore",
      "/*.*",
      "/.*",
      "!/*.php",
      "!/readme.txt",
      ".idea",
      "tests",
      "docker"
    ]
  },
  "scripts": {
    "build": [
      "@composer --no-plugins --no-interaction install --no-scripts --no-dev",
      "@composer --no-plugins --no-interaction archive --format=zip"
    ],
    "format": [
      "vendor/bin/php-cs-fixer fix --dry-run --diff"
    ]
  },
  "scripts-descriptions": {
    "build": "Build project artifact."
  }
}
