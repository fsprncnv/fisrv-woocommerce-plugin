{
  "name": "extension/fisrv-checkout-for-woocommerce",
  "description": "Fiserv payment plugin for WooCommerce",
  "version": "1.0.0",
  "minimum-stability": "dev",
  "license": "GNU General Public License v3.0",
  "autoload": {
    "classmap": [
      "includes/"
    ]
  },
  "require": {
    "fisrv/php-client": "dev-main"
  },
  "require-dev": {
    "automattic/jetpack-autoloader": "@stable",
    "php-stubs/wordpress-stubs": "@stable",
    "phpstan/phpstan": "@stable",
    "php-stubs/woocommerce-stubs": "@stable",
    "wp-coding-standards/wpcs": "3.0"
  },
  "config": {
    "allow-plugins": {
      "automattic/jetpack-autoloader": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "repositories": {
    "80": {
      "type": "composer",
      "url": "https://gitlab.mherrm.de/api/v4/group/80/-/packages/composer/packages.json"
    }
  },
  "archive": {
    "name": "fisrv-checkout-for-woocommerce",
    "exclude": [
      ".gitlab-ci.yml",
      ".gitignore",
      "/*.*",
      "/.*",
      "!/*.php",
      "!/readme.txt",
      ".idea",
      "tests",
      "docker"
    ]
  },
  "scripts": {
    "build": [
      "@composer --no-plugins --no-interaction install --no-scripts --no-dev",
      "@composer --no-plugins --no-interaction archive --format=zip"
    ],
    "analyse": [
      "vendor/bin/phpstan analyse includes"
    ],
    "fix-format": [
      "vendor/bin/phpcbf includes --standard=WordPressfix"
    ],
    "format": [
      "vendor/bin/phpcs includes --standard=WordPress"
    ]
  },
  "scripts-descriptions": {
    "build": "Build project artifact."
  }
}
