{
	"name": "extension/fiserv-woocommerce-plugin",
	"description": "WooCommerce plugin integration with Fiserv",
	"version": "1.0.0",
	"minimum-stability": "dev",
	"license": "MIT",
	"autoload": {
		"classmap": [
			"includes/"
		]
	},
	"require": {
		"fiserv/php-api-wrapper": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.0",
		"automattic/jetpack-autoloader": "^2",
		"wp-coding-standards/wpcs": "3.0"
	},
	"config": {
		"allow-plugins": {
			"automattic/jetpack-autoloader": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"repositories": {
		"80": {
			"type": "composer",
			"url": "https://gitlab.mherrm.de/api/v4/group/80/-/packages/composer/packages.json"
		}
	},
	"archive": {
		"exclude": [ ".gitlab-ci.yml", ".gitignore", "/*.*", ".idea", "docker"]
	},
	"scripts": {
			"build": [
				"@composer --no-plugins --no-interaction install --no-scripts --no-dev",
				"@composer --no-plugins --no-interaction archive"
			]
		},
		"scripts-descriptions": {
		"build": "Build project artifact."
	}
}
